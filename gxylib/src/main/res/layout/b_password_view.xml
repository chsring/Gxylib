<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?shape_exit">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:src="?closeEyes"
        android:visibility="gone" />

    <com.srwing.gxylib.coreui.view.ClearEditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/all_padding_10"
        android:layout_marginEnd="@dimen/all_padding_10"
        android:layout_toStartOf="@id/ivImage"
        android:background="?themeColor"
        android:drawableRight="?clearInput"
        android:inputType="textPassword"
        android:maxLength="16"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:paddingStart="@dimen/all_padding_10"
        android:singleLine="true"
        android:textColor="?textColor"
        android:textColorHint="@color/hintColor"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

</RelativeLayout>